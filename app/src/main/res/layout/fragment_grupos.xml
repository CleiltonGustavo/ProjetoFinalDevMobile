<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GruposFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_itens_grupos"
        android:layout_width="359dp"
        android:layout_height="643dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btAddGrupo"
        android:layout_width="72dp"
        android:layout_height="66dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/add_grupo"
        android:backgroundTint="@color/my_blue"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@+id/rv_itens_grupos"
        app:layout_constraintEnd_toEndOf="@+id/rv_itens_grupos" />

</androidx.constraintlayout.widget.ConstraintLayout>